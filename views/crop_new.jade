      dl dt,dd {
        margin-top:5px;
        margin-bottom:5px;
      }
      form {
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      }
      #crop {
          display:none;
      }
      #cropresult {
          width:130px;
          height:130px;
      }
