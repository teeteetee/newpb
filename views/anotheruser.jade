      function redactmodal (i) {
        $('#modaltitle').text(modal_data_store[i].title);
        $('#modalauthor').text(modal_data_store[i].author);
        $('#smallmodal').modal('show');
      }
      var modal_data_store=[];
      function getbooks(books,i) {
        if(!i){
         var bnum = "<h4 style='color:#ddd;display:inline;margin-left:20px;'> You have read: <span style='color:#333;'>"+user.readbooks+"</span> / new: <span style='color:#333;'>"+user.newbooks+"</span></h4>";
       $('#testinsert').append(bnum); 
        }
        console.log('i:'+i);
        var url = '/getbook/'+books[i]._id;
        $.ajax({
         method: "POST",
         url: url,
         data: 0
       })
         .done(function( msg ) {
             $('#books').empty();
            var authors_insert ;
            for(var xi=0;xi<msg.authors.length;xi++){
              authors_insert = msg.authors[xi].name+' '+msg.authors[xi].surname+' ';
            }
            console.log('newbook :'+books[i].newbook);
            console.log('goodbook :'+books[i].goodbook);
            var insert;
            switch(true){
              case(books[i].goodbook&&!books[i].newbook):
              console.log('1st case');
              insert = "<div class='row book'><div class='slideover col-xs-12 bookpadding' id='sm"+i+"'><button style='margin-right:15px;' class='btn btn-sm btn-darksuccess ' >Add to my list</button><button onclick='closeoptions("+i+");' type='button' class='"+msg._id+" close pull-right'><span aria-hidden='true'>&times;</span></button></div><div class='col-xs-12 bookpadding hovershade' onclick='ops("+i+");'><h3 id='title"+msg._id+"' style='display:inline;color:#aaa;'><span style='color:#37D6BB;'>&#8226;</span> "+msg.title.capitalizeFirstLetter()+"<small style='margin-left:10px;color:#ddd;'>"+authors_insert+"</small></h3></div></div>";
              break
              case(books[i].newbook&&!books[i].goodbook):
              console.log('3st case');
              insert = "<div class='row book'><div class='col-xs-12 bookpadding hovershade' onclick='redactmodal("+i+");'><h3 id='title"+msg._id+"' style='display:inline;margin-left:17px;'> "+msg.title.capitalizeFirstLetter()+"<small style='margin-left:10px;color:#ddd;'>"+authors_insert+"</small></h3></div></div>";
              var thisbook={};
              thisbook.author = authors_insert;
              thisbook.title = msg.title.capitalizeFirstLetter();
              modal_data_store.push(thisbook);
              break
            }        
           $('#books').append(insert);
           });
         count--;
         console.log('before iteration, count: '+count);
         if(count!=-1)
        {getbooks(books,count);}
        else {
          return 0;
        }
