                     }else{
                     console.log('2st case');
                      insert = "<tr class='pop movie_"+element._id+"' id='"+element._id+"' ><th style='padding-left:39px !important;'>"+element.movietitle+"</th><th>"+element.year+"</th></tr>"; 
                   }  
            if(element.newmovie){  
               $('#newmovies').prepend(insert);
           }
