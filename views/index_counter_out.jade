                if(!msg.trouble) {
                  console.log(msg.doc);
                  seenmovies = msg.doc[0].seenmovies;
                  newmovies = msg.doc[0].newmovies;
                  $('#oldnum').text(seenmovies);
                  $('#newnum').text(newmovies);
                }
                });
        var consolidated=[];
