        if(!i){
          return 0;
        }
        i--;
        var url = '/getbook/'+books[i];
        console.log('books: '+books[i]);
        $.ajax({
         method: "POST",
         url: url,
         data: 0
       })
         .done(function( msg ) {
           if($('#noitems').css('display')==='block'){
            $('.list').css('padding-top','0px');
            $('#noitems').remove();
           }
            var authors_insert ;
            for(var i=0;i<msg.authors.length;i++){
