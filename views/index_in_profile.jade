      script.
        var isfriend = #{isfriend};
        if(isfriend){
          $('.btn-follow').text('Unfollow');
        }
        $('.btn-follow').click(function(){
          if(isfriend)
          {addfriend(1);}
          else{
            addfriend(0);
          }
          });
        function addfriend(isfriend){
          var url;
          url=isfriend?'/counter/removefriend':'/counter/addfriend';
          var data={};
          data._id='#{_id}';
          $.ajax({
              method: "POST",
              url:url,
              data: data
            })
              .done(function( msg ) {
                 if(isfriend){
                  $('.btn-follow').text('Unfollowed');
                  $('.btn-follow').addClass('disabled');
                 }
                 else{
                  $('.btn-follow').text('Following');
                  $('.btn-follow').addClass('disabled');
                 }
                });
        }
        $('#settings_btn').click(function(){
          $('#settings').modal('show');
          });
        $('#backup').click(function(){
          $('#backupform').submit();
          });
        $('#about').click(function(){
          if($('#oldones').css('display')!='none'){
          $('#oldones').css('overflow','hidden');
          }
          else {
          $('#newones').css('overflow','hidden');
          }
          $('#wait').fadeIn();
          });
        $('.seen').click(function(){
          if(!$('.seen').hasClass('active')){
            $('#newones').hide();
            $('#oldones').show();
            $('.new').removeClass('active');
            $('.seen').addClass('active');
          }
          });
        $('.new').click(function(){
          if(!$('.new').hasClass('active')) {
            $('#newones').show();
            $('#oldones').hide();
            $('.seen').removeClass('active');
            $('.new').addClass('active');
          }
          });
        $('#closewait').click(function(){
          $('#wait').fadeOut();
          if($('#oldones').css('display')!='none'){
          $('#oldones').css('overflow','auto');
          }
          else {
          $('#newones').css('overflow','auto');
          }
          });
        //----------------------------//
        $('.add').click(function(){
          $('#addbook').modal('show');
          if($('#oldones').css('display')!='none')
            { $('#oldmovie').addClass('active');
              $('#newmovie').removeClass('active');}
          else {
             $('#newmovie').addClass('active');
          $('#oldmovie').removeClass('active');
          }
          });
        $('#oldmovie').click(function(){
        if($('#oldmovie').hasClass('active')){
        }
        else{
          $('#oldmovie').addClass('active');
          $('#newmovie').removeClass('active');
